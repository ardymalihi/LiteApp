{
  "title": "Control Panel",
  "type": "object",
  "properties": {
    "Title": {
      "required": true,
      "type": "string"
    },
    "Pages": {
      "format": "tabs",
      "required": true,
      "type": "array",
      "items": {
        "headerTemplate": "{{self.Title}}",
        "type": "object",
        "properties": {
          "Title": {
            "required": true,
            "type": "string"
          },
          "Name": {
            "required": true,
            "type": "string"
          },
          "Rows": {
            "format": "tabs",
            "required": true,
            "type": "array",
            "items": {
              "headerTemplate": "Row {{ i1 }}",
              "type": "object",
              "properties": {
                "ClassName": {
                  "required": true,
                  "type": "string"
                },
                "Cols": {
                  "format": "tabs",
                  "required": true,
                  "type": "array",
                  "items": {
                    "headerTemplate": "Column {{ i1 }}",
                    "type": "object",
                    "properties": {
                      "ClassName": {
                        "required": true,
                        "type": "string"
                      },
                      "Modules": {
                        "format": "tabs",
                        "type": "array",
                        "items": {
                          "Title": "Module",
                          "headerTemplate": "Module {{ i1 }}",
                          "oneOf": [
                            {
                              "title": "Html Module",
                              "type": "object",
                              "properties": {
                                "Type": {
                                  "type": "string",
                                  "default": "HtmlModule",
                                  "readonly": true
                                },
                                "Content": {
                                  "format": "textarea",
                                  "options": {
                                    "wysiwyg": true
                                  },
                                  "required": true,
                                  "type": "string"
                                }
                              }
                            },
                            {
                              "title": "Contact Module",
                              "type": "object",
                              "properties": {
                                "Type": {
                                  "type": "string",
                                  "default": "ContactModule",
                                  "readonly": true
                                },
                                "Email": {
                                  "required": true,
                                  "type": "string"
                                },
                                "Phone": {
                                  "required": true,
                                  "type": "string"
                                },
                                "Address": {
                                  "required": true,
                                  "type": "string"
                                }
                              }
                            }
                          ]
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "Styles": {
            "format": "tabs",
            "required": true,
            "type": "array",
            "items": {
              "headerTemplate": "<link href='{{self.Path}}'>",
              "type": "object",
              "properties": {
                "Path": {
                  "required": true,
                  "type": "string"
                }
              }
            }
          },
          "ScriptsTop": {
            "format": "tabs",
            "required": true,
            "type": "array",
            "items": {
              "headerTemplate": "<script src='{{self.Path}}' />",
              "type": "object",
              "properties": {
                "Path": {
                  "required": true,
                  "type": "string"
                }
              }
            }
          },
          "ScriptsBottom": {
            "format": "tabs",
            "required": true,
            "type": "array",
            "items": {
              "headerTemplate": "<script src='{{self.Path}}' />",
              "type": "object",
              "properties": {
                "Path": {
                  "required": true,
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "Menus": {
      "format": "tabs",
      "required": true,
      "type": "array",
      "items": {
        "headerTemplate": "{{self.Title}}",
        "type": "object",
        "properties": {
          "Title": {
            "required": true,
            "type": "string"
          },
          "Route": {
            "required": true,
            "type": "string"
          }
        }
      }
    },
    "HeaderHtml": {
      "format": "textarea",
      "options": {
        "wysiwyg": true
      },
      "required": true,
      "type": "string"
    },
    "ShowHeaderInAllPages": {
      "required": true,
      "type": "boolean"
    },
    "FooterHtml": {
      "format": "textarea",
      "options": {
        "wysiwyg": true
      },
      "required": true,
      "type": "string"
    },
    "Styles": {
      "format": "tabs",
      "required": true,
      "type": "array",
      "items": {
        "headerTemplate": "<link href='{{self.Path}}'>",
        "type": "object",
        "properties": {
          "Path": {
            "required": true,
            "type": "string"
          }
        }
      }
    },
    "ScriptsTop": {
      "format": "tabs",
      "required": true,
      "type": "array",
      "items": {
        "headerTemplate": "<script src='{{self.Path}}' />",
        "type": "object",
        "properties": {
          "Path": {
            "required": true,
            "type": "string"
          }
        }
      }
    },
    "ScriptsBottom": {
      "format": "tabs",
      "required": true,
      "type": "array",
      "items": {
        "headerTemplate": "<script src='{{self.Path}}' />",
        "type": "object",
        "properties": {
          "Path": {
            "required": true,
            "type": "string"
          }
        }
      }
    }
  }
}