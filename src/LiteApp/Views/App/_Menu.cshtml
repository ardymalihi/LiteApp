@model LiteApp.ViewModels.AppViewModel
@if (Model.App.MenuItems != null && Model.App.MenuItems.Count > 0)
{
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="/" class="navbar-brand">@Model.App.Title</a>
            <a asp-area="" asp-controller="App" asp-action="Index" class="navbar-brand">@Model.App.Title</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @foreach (var menu in Model.App.MenuItems)
                {
                    <li><a href="@menu.Route">@menu.Title</a></li>
                }
            </ul>
        </div>
    </div>
</div>
}