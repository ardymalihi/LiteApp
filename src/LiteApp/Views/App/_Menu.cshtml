@model LiteApp.ViewModels.AppViewModel
@if (Model.App.Menus != null && Model.App.Menus.Count > 0)
{
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="/" class="navbar-brand">@Model.App.Title</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @foreach (var menu in Model.App.Menus)
                {
                    <li><a href="@menu.Route">@menu.Title</a></li>
                }
            </ul>
            <ul class="nav navbar-nav navbar-right">
                @if (User.IsInRole("admin"))
                {
                    <li><a asp-controller="App" asp-action="Admin">Admin</a></li>
                }
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a asp-controller="App" asp-action="Logout">Logout @Model.UserProfile.Name</a></li>
                }
                else
                {
                    <li><a asp-controller="App" asp-action="Login">Login</a></li>
                }
            </ul>

        </div>
    </div>
</div>
}